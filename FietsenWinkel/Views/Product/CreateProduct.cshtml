
@model Models.Product
@{
    ViewData["Title"] = "Create a new Product";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Create a new product</h1>
<form asp-action="CreateProduct">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="PName">@Html.DisplayNameFor(model => model.PName): </label>
            <input type="text" class="form-control" asp-for="PName" placeholder="Product name" required />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="PPrice">@Html.DisplayNameFor(model => model.PPrice): </label>
            <input type="text" class="form-control" asp-for="PPrice" placeholder="Price" />
        </div>
    </div>

    <input type="submit" value="Create Product" class="btn btn-secondary" />
    <button class="btn btn-secondary" asp-controller="Product" asp-action="Index" formnovalidate>Back to product list</button>


</form>

